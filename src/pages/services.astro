---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Services">
  <!--Nav Section-->
  <div
    id="main"
    class="flex flex-col content-center items-center justify-center bg-pink-100 py-5"
  >
    <section class="justify-self-center">
      <h1 class="text-center text-3xl drop-shadow-lg">Services</h1>
      <h2 class="text-center text-3xl">
        <a href="#" class="text-center text-3xl">Acrylic one color full sets</a>
      </h2>
      <div class="flex flex-col items-center text-center text-xl">
        <ul class="list-heart flex flex-col items-center">
          <li class="basis-11">*Short Acrylic Full Set: $45+</li>
          <li class="basis-11">*Medium Acrylic Full Set: $50+</li>
          <li class="basis-11">*Long Acrylic Full Set: $55+</li>
          <li class="basis-11">*XL+ Acrylic Full Set: $65+</li>
        </ul>
        <h2 class="text-center text-3xl drop-shadow-lg">
          Enhancements cost per nail
        </h2>
        <ul class="list-heart">
          <li class="basis-11">*Ombre full set: $10</li>
          <li class="basis-11">*French tip full set: $15</li>
          <li class="basis-11">*Rhinestones: $1-20</li>
          <li class="basis-11">*Stickers/Decals/Charms: $1-5</li>
          <li class="basis-11">*Sugar/Glitter nail: $1</li>
          <li class="basis-11">*Marble: $2</li>
          <li class="basis-11">*Gel nail art: $2-15</li>
          <li class="basis-11">*French: $3</li>
          <li class="basis-11">*Ombre: $2</li>
          <li class="basis-11">*3D Nail Art: $2-15</li>
        </ul>
        <span class="basis-11">*Any additional designs are an extra cost.</span>
      </div>
    </section>

    <!-- Footer -->
    <iframe
      class="viewd"
      src="https://app.squarespacescheduling.com/schedule.php?owner=25976430"
      title="Schedule Appointment"
      width="100%"
      height="800"></iframe><script
      src="https://embed.acuityscheduling.com/js/embed.js"
      type="text/javascript"
    ></script>
  </div>
</Layout>
